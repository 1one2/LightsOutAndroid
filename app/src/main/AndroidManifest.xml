<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.revisedandroidlightsout">

    <application
        android:name=".ApplicationController"
        android:allowBackup="true"
        android:icon="@raw/lightoff"
        android:label="@string/app_name"
        android:roundIcon="@raw/lightoff"
        android:supportsRtl="true"
        android:theme="@style/Theme.REVISEDAndroidLightsOut">
        <activity android:name=".activities.Ranking"></activity>
        <activity android:name=".activities.About" />
        <activity android:name=".activities.Game" />
        <activity android:name=".activities.MainMenu" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>