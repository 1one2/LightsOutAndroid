<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.GameActivity"
    android:background="@drawable/app_background">


    <ImageView
        android:id="@+id/playImageView"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:padding="10dp"
        android:src="@raw/play"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play/\nRestart"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/playImageView"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/robotoitalic"
        android:textSize="23dp"
        android:padding="10dp"/>
    
    <Chronometer
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textSize="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/boardGridView"
        android:countDown="false"
        android:textColor="@color/white"
        android:format="%s"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"

        android:id="@+id/boardGridView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="5"
        app:layout_constraintTop_toBottomOf="@id/timer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/backImageView"
        android:horizontalSpacing="5dp"
        android:verticalSpacing="5dp"
        />

    <ImageView
        android:id="@+id/backImageView"
        android:padding="10dp"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@raw/back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>