<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainMenu"
    android:background="@drawable/app_background">

    <TextView
        android:id="@+id/mainMenuTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="55sp"
        android:textColor="@color/white"
        android:fontFamily="@font/robotobolditalic"
        android:text="@string/app_name"
        android:textAlignment="gravity"

        android:padding="10sp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />


    <android.widget.Button
        android:id="@+id/mainMenuPlay"
        android:layout_width="220sp"
        android:layout_height="80sp"
        android:background="@drawable/button_new_design"

        android:textColor="@color/lightGray"
        android:fontFamily="@font/robotoitalic"
        android:textSize="50sp"
        android:text="@string/play"

        app:layout_constraintTop_toBottomOf="@id/mainMenuTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50sp"
        />

    <android.widget.Button
        android:id="@+id/mainMenuRanking"
        android:layout_width="220sp"
        android:layout_height="80sp"
        android:background="@drawable/button_new_design"

        android:textColor="@color/lightGray"
        android:fontFamily="@font/robotoitalic"
        android:textSize="42sp"
        android:text="@string/ranking"

        app:layout_constraintTop_toBottomOf="@id/mainMenuPlay"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10sp"
        />

    <android.widget.Button
        android:id="@+id/mainMenuAbout"
        android:layout_width="220sp"
        android:layout_height="80sp"
        android:background="@drawable/button_new_design"

        android:textColor="@color/lightGray"
        android:fontFamily="@font/robotoitalic"
        android:textSize="47sp"
        android:text="@string/about"

        app:layout_constraintTop_toBottomOf="@id/mainMenuRanking"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10sp"
        />

    <android.widget.Button
        android:id="@+id/mainMenuExit"
        android:layout_width="220sp"
        android:layout_height="80sp"
        android:background="@drawable/button_new_design"

        android:textColor="@color/lightGray"
        android:fontFamily="@font/robotoitalic"
        android:textSize="50sp"
        android:text="@string/exit"

        app:layout_constraintTop_toBottomOf="@id/mainMenuAbout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>